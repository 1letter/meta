name: Meta
on:
  push:
    branches:
      - master
      - main
  pull_request:
    branches:
      - master
      - main
  workflow_dispatch:

jobs:
{% for job_name in jobs %}
  %(job_name)s:
    uses: plone/meta/.github/workflows/%(job_name)s.yml@%(ref)s
{% endfor %}

##
# To modify the list of default jobs being created add in .meta.toml:
# [githb]
# jobs = [
#    "qa",
#    "test",
#    "coverage",
#    "dependencies",
#    "release_ready",
#    "circular",
#    ]
##

