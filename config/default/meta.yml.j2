name: Meta
on:
  push:
    branches:
      - master
      - main
  pull_request:
    branches:
      - master
      - main
  workflow_dispatch:

jobs:
{% for job_name in jobs %}
  %(job_name)s:
    uses: plone/meta/.github/workflows/%(job_name)s.yml@%(ref)s
{% endfor %}
%(extra_lines)s
